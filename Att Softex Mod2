import java.util.Scanner;
public class softex1 {
    public static void main (String[]args){
        Scanner input = new Scanner(System.in);
        System.out.println("Digite seu nome: ");
         String nomeAluno = input.nextLine();

         System.out.println("Digite quantas faltas voce tem: ");
         int faltas = input.nextInt();

         System.out.println("Digite sua primeira nota: ");
         double primeiraNota = input.nextDouble();

         System.out.println("Digite sua segunda nota: ");
         double segundaNota = input.nextDouble();

         if ((primeiraNota + segundaNota/2)< 7){
            System.out.println("Voce esta reprovado!");
         }else if(faltas > 3){
            System.out.println("Voce esta reprovado");
        } else if ((primeiraNota + segundaNota/2) >= 7)
            System.out.println("Voce esta aprovado!");
    }
}  
